<script src="https://cdnjs.cloudflare.com/ajax/libs/lottie-web/5.12.2/lottie.min.js" data-no-defer="1"></script>
<script>
(function(){
  try{
    lottie.loadAnimation({container: document.getElementById('lottie-hero'),renderer: 'svg', loop: false, autoplay: true,path: 'https://adriankordowski.pl/wp-content/uploads/2025/11/ANIMACJA-1.json'});
  }catch(e){ console.error(e); }

  const copy = document.querySelector('.copy');
  const heroSub = document.querySelector('.hero-sub');
  const heroTags = document.querySelector('.hero-tags');
  const ctaDesktop = document.querySelector('.hero-cta-desktop');
  const ctaMobile = document.querySelector('.hero-cta-mobile');
  const lottieWrap = document.querySelector('.lottie-wrap');
  const metrics = document.querySelector('.metrics');
  const mediaAside = document.querySelector('.hero-media');

  function place(){
    const isMobile = window.matchMedia('(max-width: 768px)').matches;
    
    // Pobieramy nagłówek H1 (żeby wiedzieć, gdzie wstawiać)
    const h1 = copy.querySelector('h1');

    if(isMobile){
      // --- LOGIKA MOBILNA: Hard Skills wysoko, Opis nisko ---

      // 1. Animacja (Lottie) - wstawiamy zaraz pod H1
      if(h1 && !copy.contains(lottieWrap)) {
          h1.after(lottieWrap);
      } else if (h1 && lottieWrap) {
          h1.after(lottieWrap); // Upewniamy się
      }

      // 2. Tagi (Hard Skills) - wstawiamy pod Animacją
      if(lottieWrap && heroTags) {
          lottieWrap.after(heroTags);
      }

      // 3. Licznik (Metrics) - wstawiamy pod Tagami
      if(heroTags && metrics) {
          heroTags.after(metrics);
      }

      // 4. Przyciski (CTA) - wstawiamy pod Licznikiem
      if(metrics && ctaMobile) {
          metrics.after(ctaMobile);
      }

      // 5. Opis (heroSub) - NA SAMYM DOLE (po przyciskach)
      if(ctaMobile && heroSub) {
          ctaMobile.after(heroSub);
      }

    } else {
      // --- LOGIKA DESKTOP: Przywracamy standardowy układ ---
      
      // Lottie i Metrics wracają na prawo (do mediaAside)
      if(!mediaAside.contains(lottieWrap)) mediaAside.prepend(lottieWrap);
      if(!mediaAside.contains(metrics)) mediaAside.appendChild(metrics);
      
      // Tagi wracają nad przyciski (przed ctaDesktop)
      if(ctaDesktop && heroTags){
         copy.insertBefore(heroTags, ctaDesktop);
      }
      
      // Opis wraca zaraz pod H1 (czyli przed tagi)
      if(h1 && heroSub) {
         h1.after(heroSub);
      }
    }
  }

  place();
  window.addEventListener('resize', place);

  const el = document.querySelector('.counter');
  if(el){
    const target = Number(el.dataset.target || 50);
    const suffix = el.dataset.suffix || 'M+';
    const obs = new IntersectionObserver(([ent])=>{
      if(!ent.isIntersecting) return;
      obs.disconnect();
      const dur = 1600, start = performance.now();
      function tick(t){
        const p = Math.min(1,(t-start)/dur);
        const eased = 0.5 - 0.5*Math.cos(Math.PI*p);
        const val = Math.round(target * (0.08 + 0.92*eased));
        el.textContent = '€' + val + suffix;
        if(p<1) requestAnimationFrame(tick); else el.textContent = '€' + target + suffix;
      }
      requestAnimationFrame(tick);
    },{threshold:0.6});
    obs.observe(el);
  }
  const form = document.querySelector('form.form');
  if(form){
    const email = form.querySelector('input[name="email"]');
    const replyHidden = form.querySelector('input[name="_replyto"]');
    if(email && replyHidden){
      email.addEventListener('input', ()=>{ replyHidden.value = email.value; });
    }
  }
})();
</script>

<section id="about" class="section">
  <div class="container grid-2">
